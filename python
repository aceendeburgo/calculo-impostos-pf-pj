import turtle
import math
import time

# Configura a janela
screen = turtle.Screen()
screen.bgcolor("black")
screen.title("Coração Pulsando")

# Cria o turtle
heart = turtle.Turtle()
heart.color("red")
heart.speed(0)
heart.hideturtle()

# Função para desenhar o coração


def draw_heart(scale):
    heart.clear()
    points = []

    for t in range(360):
        angle = math.radians(t)
        x = scale * 16 * math.sin(angle)**3
        y = scale * (13 * math.cos(angle) - 5 * math.cos(2*angle)
                     - 2 * math.cos(3*angle) - math.cos(4*angle))
        points.append((x, y))

    heart.penup()
    heart.goto(points[0])
    heart.pendown()
    heart.begin_fill()
    for point in points:
        heart.goto(point)
    heart.end_fill()


# Parâmetros de pulsação
min_scale = 15.0
max_scale = 17.0
scale = min_scale
growing = True

try:
    while True:
        draw_heart(scale)
        time.sleep(1)

        if growing:
            scale += 0.4
            if scale >= max_scale:
                scale = max_scale
                draw_heart(scale)
                time.sleep(4)  # Pausa com coração "cheio"
                growing = False
        else:
            scale -= 0.4
            if scale <= min_scale:
                scale = min_scale
                draw_heart(scale)
                time.sleep(4)  # Pausa com coração "relaxado"
                growing = True
except turtle.Terminator:
    pass  # Finaliza suavemente se a janela for fechada
